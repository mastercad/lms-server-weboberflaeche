{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Media Type Eintrag bearbeiten</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        {{ form_start(form, {'action': path('save'), 'method': 'POST'}) }}
                            {{ form_widget(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">{{ 1 ? "Aktualisieren" : "Anlegen" }}</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Schlie√üen</button>
            </div>
        </div>
    </div>
</div>
